<h1 style="text-align: center">
  <p> Welcome to Avivas </p>
  <div id="productosCarousel" class="carousel slide" data-bs-ride="carousel">
  <!-- Indicadores -->
  <div class="carousel-indicators">
    <% @productos.each_with_index do |producto, index| %>
      <button type="button" data-bs-target="#productosCarousel" data-bs-slide-to="<%= index %>" class="<%= 'active' if index == 0 %>" aria-current="<%= 'true' if index == 0 %>" aria-label="Slide <%= index + 1 %>"></button>
    <% end %>
  </div>

  <!-- Contenedor del Carrusel -->
  <div class="carousel-inner">
    <% @productos.each_with_index do |producto, index| %>
      <div class="carousel-item <%= 'active' if index == 0 %>">
          <% if producto.imagen.attached? %>
            <%= image_tag producto.imagen, alt: producto.nombre, class: "producto-imagen" %>
          <%else%>
            <%= image_tag "placeholder.png", alt: producto.nombre, class: "producto-imagen" %>
          <% end %>
        <div class="carousel-caption d-none d-md-block">
          <h5><%= producto.nombre %></h5>
          <%= link_to "Ver mÃ¡s", producto_path(producto), class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Controles -->
  <button class="carousel-control-prev" type="button" data-bs-target="#productosCarousel" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Anterior</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#productosCarousel" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Siguiente</span>
  </button>
</div>

</h1>