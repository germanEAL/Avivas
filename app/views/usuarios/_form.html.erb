<%= form_with(model: usuario, class:"row g-3") do |form|%>
  <% if usuario.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(usuario.errors.count, "error") %> prohibited this usuario from being saved:</h2>

      <ul>
        <% usuario.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
    <div class="d-flex flex-column align-items-center">
      <div class="form-group text-center w-50">
        <%= form.label :nombre, style: "display: block",class:"form-label"%>
        <%= form.text_field :nombre, class:"form-control", placeholder:"Ingrese su nombre", aria_label:"default input example"  %>
      </div>

      <div  class="form-group text-center w-50">
        <%= form.label :email, style: "display: block", class:"form-label" %>
        <%= form.text_field :email, class:"form-control", placeholder: "Ingrese su email" %>
      </div>

      <div  class="form-group text-center w-50">
        <%= form.label :contraseña, style: "display: block",class:"form-label" %>
        <%= form.password_field :password,class:"form-control", placeholder: "Ingrese su contraseña" %>
        <div class="col-auto">
          <span id="passwordHelpInline" class="form-text">
            Debe ser de 8-20 caracteres.
          </span>
        </div>
      </div>


      <div  class="form-group text-center w-50">
        <%= form.label :telefono, style: "display: block" %>
        <%= form.text_field :telefono,class:"form-control" %>
      </div>

      <div class="form-group text-center w-50">
        <%= form.label :fecha_ingreso, style: "display: block" %>
        <%= form.date_field :fecha_ingreso,class:"form-control" %>
      </div>
      
      <div class="form-group text-center w-50">
        <%= form.label :rol, style: "display: block" %>
        <%= form.select :rol,@roles,{include_blank: "Seleccione un rol"},class:"form-control" %>
      

      <br>
      <div class="form-actions" style="text-align: center;">
        <%= form.submit "Guardar", class: "btn btn-primary", style: "padding: 10px 20px; background-color: #007bff; color: white; border: none; border-radius: 4px; cursor: pointer;" %>   <%= link_to "Volver", usuarios_path, class: "btn btn-primary", style: "padding: 10px 20px; background-color: #9b9b9b; color: white; border: none; border-radius: 4px; cursor: pointer;" %>

      </div>
    </div>
<% end %>
