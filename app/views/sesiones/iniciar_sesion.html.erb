<div class="container mt-5" style="max-width: 400px;">
  <h1 class="text-center mb-4">Iniciar Sesión</h1>

  <%= form_with url: login_path, method: :post, local: true, class: "p-4 border rounded shadow-sm bg-light" do |form| %>
    <div class="mb-3">
      <%= form.label :email, "Email", class: "form-label fw-bold" %>
      <%= form.email_field :email, required: true, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :password, "Contraseña", class: "form-label fw-bold" %>
      <%= form.password_field :password, required: true, class: "form-control" %>
    </div>

    <div class="text-center">
      <%= form.submit "Iniciar Sesión", class: "btn btn-primary w-100" %>
    </div>
  <% end %>
</div>
